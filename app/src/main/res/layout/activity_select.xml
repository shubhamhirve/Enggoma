<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="ENGGOMA"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">

        <com.james602152002.floatinglabelspinner.FloatingLabelSpinner
            android:id="@+id/spinner_stream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:j_fls_colorError="@android:color/holo_red_dark"
            app:j_fls_colorHighlight="@color/gray"
            app:j_fls_error_anim_duration="8000"
            app:j_fls_error_horizontal_margin="2dp"
            app:j_fls_error_textSize="14sp"
            app:j_fls_error_vertical_margin="2dp"
            app:j_fls_float_anim_duration="400"
            app:j_fls_hint="Select Stream"
            app:j_fls_hint_textSize="16sp"
            app:j_fls_label_horizontal_margin="1dp"
            app:j_fls_label_textSize="14sp"
            app:j_fls_label_vertical_margin="1dp"
            app:j_fls_recursive="true"
            app:j_fls_textColorHint="@color/gray"
            app:j_fls_thickness="2dp" />

        <com.james602152002.floatinglabelspinner.FloatingLabelSpinner
            android:id="@+id/spinner_semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:j_fls_colorError="@android:color/holo_red_dark"
            app:j_fls_colorHighlight="@color/gray"
            app:j_fls_error_anim_duration="8000"
            app:j_fls_error_horizontal_margin="2dp"
            app:j_fls_error_textSize="14sp"
            app:j_fls_error_vertical_margin="2dp"
            app:j_fls_float_anim_duration="400"
            app:j_fls_hint="Select Semester"
            app:j_fls_hint_textSize="16sp"
            app:j_fls_label_horizontal_margin="1dp"
            app:j_fls_label_textSize="14sp"
            app:j_fls_label_vertical_margin="1dp"
            app:j_fls_recursive="true"
            app:j_fls_textColorHint="@color/gray"
            app:j_fls_thickness="2dp" />

        <com.james602152002.floatinglabelspinner.FloatingLabelSpinner
            android:id="@+id/spinner_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:j_fls_colorError="@android:color/holo_red_dark"
            app:j_fls_colorHighlight="@color/gray"
            app:j_fls_error_anim_duration="8000"
            app:j_fls_error_horizontal_margin="2dp"
            app:j_fls_error_textSize="14sp"
            app:j_fls_error_vertical_margin="2dp"
            app:j_fls_float_anim_duration="400"
            app:j_fls_hint="Select Subject"
            app:j_fls_hint_textSize="16sp"
            app:j_fls_label_horizontal_margin="1dp"
            app:j_fls_label_textSize="14sp"
            app:j_fls_label_vertical_margin="1dp"
            app:j_fls_recursive="true"
            app:j_fls_textColorHint="@color/gray"
            app:j_fls_thickness="2dp" />


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_border"
            android:elevation="2dp"
            android:text="Submit"
            android:textColor="#454545"
            android:textSize="19dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Google Native Ads"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>